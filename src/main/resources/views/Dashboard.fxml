<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="farrel.ad.taskmanager.controllers.DashboardController"
      spacing="50"
      style="-fx-background-color: #ECF0F1;">

    <fx:include source="../components/Sidebar.fxml"/>

    <VBox spacing="20">
        <Label style="-fx-font-weight: bold; -fx-font-size: 20px;">My Projects</Label>
        <GridPane fx:id="projectsGrid" hgap="50" vgap="20">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
            </columnConstraints>
        </GridPane>
    </VBox>
</HBox>
